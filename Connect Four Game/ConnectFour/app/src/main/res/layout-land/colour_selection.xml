<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_two">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Colour"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/colourGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:rowCount="2"
        android:columnCount="3"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintBottom_toTopOf="@id/confirmSelection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/redColour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/token_red"
            android:contentDescription="redColour"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/blueColour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/token_blue"
            android:contentDescription="blueColour"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/greenColour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/token_green"
            android:contentDescription="greenColour"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/purpleColour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/token_purple"
            android:contentDescription="purpleColour"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/pinkColour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/token_pink"
            android:contentDescription="pinkColour"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/yellowColour"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/token_yellow"
            android:contentDescription="yellowColour"
            android:layout_margin="8dp"/>

    </GridLayout>

    <Button
        android:id="@+id/confirmSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Selection"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>